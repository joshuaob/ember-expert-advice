<div class="row h-screen ">
  <main role="main" class="col-12">
    <div class="row">
      <div class="col-2  text-right">
        <p>views</p>
      </div>

      <div class="col-8 ">
        <p>Questions</p>
      </div>

      <div class="col ">
      </div>
    </div>

    <div class="row">
      <div class="col-2  text-right">
        <p>{{model.viewCounter}}</p>
        <p>
          {{#link-to 'post.edit' model.slug}}
            Edit
          {{/link-to}}
        </p>
        <p>
          <a href="" {{action "deleteQuestion" model}}>Delete</a>
        </p>
      </div>

      <div class="col-8">
        <div class="mb-5 mt-4">
          <h2>{{model.title}}</h2>
        </div>

        <div class="mb-5 mt-4">
          <p>{{model.description}}</p>
        </div>

          <div class="mb-4 mt-5">
            <h2>Answer</h2>
          </div>

        <form class="mb-3">
          <div class="form-group">
            <label for="">Body</label>
            <textarea name="name" rows="8" cols="80" class="form-control"></textarea>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary">Post an answer</button>
          </div>
        </form>
      </div>

      <div class="col">
      </div>
    </div>
  </main>
</div>
