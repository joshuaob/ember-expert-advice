<div class="row h-screen ">
  <main role="main" class="col-12">
    <div class="row">
      <div class="col-2  text-right">
        <p>views</p>
      </div>

      <div class="col-8 ">
        <p>Questions</p>
      </div>

      <div class="col ">
      </div>
    </div>

    <div class="row">
      <div class="col-2  text-right">
        <p>{{model.question.viewCounter}}</p>
        <p>
          {{#link-to 'post.edit' model.question.slug}}
            Edit
          {{/link-to}}
        </p>
        <p>
          <a href="" {{action "deleteQuestion" model.question}}>Delete</a>
        </p>
      </div>

      <div class="col-8">
        <div class="mb-5 mt-4">
          <h2>{{model.question.title}}</h2>
        </div>

        <div class="mb-5 mt-4">
          <p>{{model.question.description}}</p>
        </div>

        <div class="mb-4 mt-5">
          <h2>Answer</h2>
        </div>

        {{answer-form post = model.post submitForm = (action 'submitPostForm')}}

        <div class="mb-4 mt-5">
          <h2>Answers ({{model.posts.length}})</h2>
        </div>

        {{#each model.posts as |post|}}
          <div class="card">
            <div class="card-body">
              {{post.description}}
            </div>
          </div>
          <br>
        {{/each}}
      </div>

      <div class="col">
      </div>
    </div>
  </main>
</div>
